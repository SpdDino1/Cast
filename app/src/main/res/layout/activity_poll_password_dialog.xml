<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".serverCode.PollQuestionsFragment.PollPasswordDialog">

    <EditText
        android:id="@+id/pollPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="@string/validCharacters"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:maxLength="50"
        android:hint="Poll Password"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Set"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/round_button"

        android:onClick="onPollPasswordSetButtonClicked"/>
</LinearLayout>